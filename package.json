{
  "name": "@rlanz/sentry",
  "description": "A wrapper around the Sentry SDK to make it easier to use in a AdonisJS application",
  "version": "0.2.0-0",
  "engines": {
    "node": ">= 20.11.0"
  },
  "main": "build/index.js",
  "type": "module",
  "files": [
    "build"
  ],
  "exports": {
    ".": "./build/index.js",
    "./middleware": "./build/src/middleware.js",
    "./provider": "./build/providers/sentry_provider.js"
  },
  "scripts": {
    "build": "yarn clean && tsc",
    "clean": "del-cli build",
    "copy:templates": "copyfiles \"stubs/**/*.stub\" build",
    "format": "prettier --write .",
    "lint": "eslint . --ext=.ts",
    "postbuild": "yarn copy:templates",
    "prepublishOnly": "yarn build",
    "release": "release-it",
    "test": "echo \"Error: no test specified\" && exit 1",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@poppinss/utils": "^6.9.2",
    "@sentry/node": "^8.48.0"
  },
  "devDependencies": {
    "@adonisjs/assembler": "^7.8.2",
    "@adonisjs/core": "^6.17.0",
    "@adonisjs/eslint-config": "^2.0.0-beta.7",
    "@adonisjs/prettier-config": "^1.4.0",
    "@adonisjs/tsconfig": "^1.4.0",
    "@types/node": "^20.17.12",
    "copyfiles": "^2.4.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "release-it": "^17.11.0",
    "typescript": "^5.7.2"
  },
  "author": "Romain Lanz <romain.lanz@pm.me>",
  "license": "MIT",
  "keywords": [
    "sentry",
    "adonisjs",
    "adonis"
  ],
  "prettier": "@adonisjs/prettier-config",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore(release): ${version}",
      "tagAnnotation": "v${version}",
      "tagName": "v${version}"
    },
    "github": {
      "release": true,
      "releaseName": "v${version}",
      "web": true
    }
  },
  "packageManager": "yarn@4.6.0+sha512.5383cc12567a95f1d668fbe762dfe0075c595b4bfff433be478dbbe24e05251a8e8c3eb992a986667c1d53b6c3a9c85b8398c35a960587fbd9fa3a0915406728"
}
